#!/bin/bash

# Update package lists
apt-get update

# Install Nginx
apt-get install -y nginx

# Configure Nginx
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location = / {
        echo "Hello World!";
    }
}
EOF

# Restart Nginx
service nginx restart

